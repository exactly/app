{
  "compilerOptions": {
    "target": "es2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "./",
    "paths": {
      "components/*": ["./components/*"],
      "pages/*": ["./pages/*"],
      "hooks/*": ["./hooks/*"],
      "contracts/*": ["./contracts/*"],
      "types/*": ["./types/*"],
      "utils/*": ["./utils/*"],
      "contexts/*": ["./contexts/*"],
      "dictionary/*": ["./dictionary/*"],
      "data/*": ["./data/*"],
      "config/*": ["./config/*"],
      "queries/*": ["./queries/*"]
    },
    "incremental": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "contexts/MarketContext.js",
    "utils/queryRates.ts"
  ],
  "exclude": ["node_modules"]
}
